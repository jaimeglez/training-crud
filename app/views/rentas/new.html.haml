%h1 New renta

-#= render :partial => 'form', :locals => {:renta => @renta}
= form_for @renta, :url => {:action => "create"} do |f|
  -if @renta.errors.any?
    #error_explanation
      %h2= "#{pluralize(@renta.errors.count, "error")} prohibited this renta from being saved:"
      %ul
        - @renta.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :movie_id
    = f.text_field :movie_id
  .actions
    = f.submit 'Save'

= link_to 'Back', rentas_path
